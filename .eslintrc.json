{
    "parser": "babel-eslint",
    "env": {
        "browser": true
    },
    "parserOptions": {
        "ecmaVersion": 8,
        "sourceType": "module",
        "ecmaFeatures": {
            "classes": true,
            "modules": true,
            "destructuring": true,
            "defaultParams": true,
            "arrowFunctions": true,
            "experimentalDecorators": true,
            "superInFunctions": true,
            "templateStrings": true,
            "forOf": true,
            "jsx": true
        }
    },
    "rules": {
        "semi": [
            "warn",
            "always"
        ]
    }
}